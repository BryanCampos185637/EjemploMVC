
@{
    ViewBag.Title = "Index";
}
<h2>Categoria</h2>
<div class="row">
    <div class="col-lg-4">
        <div class="card">
            <div class="card-header">
                <h5>Formulario categoria</h5>
            </div>
            <div class="card-body">
                <input type="hidden" id="IDCATEGORIA" name="IDCATEGORIA" class="data"/>
                <div class="form-group">
                    <label>Nombre categoria</label>
                    <input type="text" id="NOMBRE" name="NOMBRE" 
                           placeholder="Escribe el nombre de la categoria" class="form-control requerid data"/>
                </div>
            </div>
            <div class="card-footer">
                <button class="btn btn-primary" onclick="guardar()">Guardar</button>
            </div>
        </div>
    </div>
    <div class="col-lg-8" id="myTable">
        <span>Cargando categorias...</span>
    </div>
</div>
<script src="~/Content/jquery.min.js"></script>
<script src="~/Content/AJAX/generic.js"></script>
<script src="~/Content/AJAX/categoria.js"></script>

